<div class="card mb-4">
  <div class="card-header">
    <i class="fas fa-table me-1"></i>
    <%= link_to I18n.t("aia_store.buttons.new", resource: "Family"), new_family_path, class: "badge bg-danger" %>
    <%= I18n.t("aia_store.families.list.title") %>
    <%= link_to "XLS", families_path(format: "xls"), class: "btn btn-success btn-sm float-end" %>

  </div>
  
  <div class="card-body">
    <div class="row mb-3">
      <div class="col-12">
        <%= render 'layouts/search_order_bar', { controller: 'families' } %> 
      </div>
    </div>

    <div id="families">
      <table class="table table-striped table-hover my-0 table-fixed">
        <thead class="thead-dark">
          <tr>
            <th>Nombre</th>
            <th>Descripci√≥n</th>
          </tr>
        </thead>
        <tbody>
          <% @families.each do |family| %>
           <%= render partial: "layouts/editable_row", locals: { 
        resource: family, 
        resource_name: "family", 
		parent: nil,
        fields: ["name", "description"] 
      } %>
          <% end %>
        </tbody>
      </table>
    </div>

   
    <div class="custom-pagination">
      <%= will_paginate @families, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>
