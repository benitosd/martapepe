<%= turbo_frame_tag "modal" do %>
    <%= tag.div data: { controller: "turbo-modal",action: "turbo:submit-end->turbo-modal#submitEnd"}, class: "p-5 bg-slate-300 absolute z-10 top-10 right-10 rounded-md w-96 break-words" do %>
      <%= @title %>
      <%= content %>
      <%= button_tag "Close", data: { action: "turbo-modal#hideModal" }, type: "button", class: "badge bg-danger" %>
    <% end %>
  <% end %>
